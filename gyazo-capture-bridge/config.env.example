# Copy this file to config.env and edit values.

# Gyazo API token (placeholder).
# Write it as a plain text string in double quotes.
# Example: GYAZO_ACCESS_TOKEN="your_token_here"
GYAZO_ACCESS_TOKEN="PASTE_GYAZO_ACCESS_TOKEN_HERE"

# Capture folder where your screenshot tool saves image files.
CAPTURE_DIR="$HOME/Pictures/Captures"

# Link format: "page" (Gyazo page) or "image" (direct image URL).
LINK_TYPE="page"

# Behavior after successful upload.
COPY_TO_CLIPBOARD="true"
OPEN_IN_BROWSER="false"
DELETE_AFTER_UPLOAD="true"

# Gyazo upload metadata.
# Access policy values:
# - only_me (private)
# - anyone (shareable by link)
GYAZO_ACCESS_POLICY="only_me"
GYAZO_METADATA_IS_PUBLIC="false"
GYAZO_COLLECTION_ID=""
GYAZO_SEND_APP_METADATA="true"
GYAZO_SEND_TITLE_METADATA="true"
GYAZO_SEND_DESC_METADATA="true"
GYAZO_SEND_CREATED_AT="true"
# Browser Source (Gyazo title field): "url" or "tab".
GYAZO_TITLE_BROWSER_MODE="url"
# Gyazo hashtag should be one word. Use underscores if needed.
# Good: #capture, #Gyazo_Capture_Bridge
# Bad: #Gyazo-Capture-Bridge
GYAZO_DESC_TAG="#capture"
GYAZO_CONTEXT_NOTE=""
GYAZO_DESC_TAG_APP="true"
GYAZO_DESC_TAG_WINDOW="false"
GYAZO_DESC_TAG_URL="false"
# compact = no labels; labeled = App:/Window:/URL:
GYAZO_DESC_STYLE="compact"
# Network timeouts for Gyazo upload requests.
CURL_CONNECT_TIMEOUT_SEC="10"
CURL_MAX_TIME_SEC="60"

# Add the frontmost app name to log entries.
INCLUDE_FRONTMOST_APP="true"

# Log destination.
LOG_FILE="$HOME/Pictures/Captures/gyazo-upload.log"

# Auto mode options (used by auto_dispatch.sh).
ENABLE_AUTO_UPLOAD="true"
AUTO_UPLOAD_DELAY_SEC="1"
AUTO_STATE_FILE="$HOME/Library/Application Support/gyazo-capture-bridge/auto.state"

# Notes pipeline (text -> image -> Gyazo).
NOTES_INBOX_DIR="$HOME/Pictures/GyazoNotes/inbox"
NOTES_ARCHIVE_DIR="$HOME/Pictures/GyazoNotes/archive"
NOTES_RENDERED_DIR="$HOME/Pictures/GyazoNotes/rendered"
NOTES_INDEX_FILE="$HOME/Pictures/GyazoNotes/index.jsonl"
# Notes card size presets:
# - mobile: tuned for phone reading without scrolling (default)
# - desktop: page-like card for laptop viewing
# - custom: use NOTES_RENDER_* and NOTES_PAGE_MAX_CHARS below
NOTES_SIZE_PRESET="mobile"
NOTES_RENDER_WIDTH="430"
NOTES_RENDER_BACKGROUND="#A0ADBC"
NOTES_RENDER_FOREGROUND="#2C2F38"
NOTES_RENDER_BORDER_COLOR="#E7E7EC"
NOTES_RENDER_SURFACE_COLOR="#F6F7FA"
# random_sticky = random sticky-note theme with no immediate repeat.
# fixed = use NOTES_RENDER_* colors above.
NOTES_COLOR_MODE="random_sticky"
NOTES_THEME_STATE_FILE="$HOME/Library/Application Support/gyazo-capture-bridge/notes-theme.state"
NOTES_RENDER_BORDER_PX="24"
NOTES_RENDER_POINT_SIZE="32"
NOTES_RENDER_LINE_SPACING="12"
NOTES_RENDER_RADIUS="16"
NOTES_RENDER_SCALE="2"
NOTES_RENDER_ENGINE="auto"
NOTES_SWIFT_CMD="swift"
NOTES_PYTHON_CMD="python3"
# Optional font family for note cards. If unavailable in ImageMagick build,
# the renderer falls back to default font automatically.
NOTES_FONT_FAMILY="Menlo"
# false = no window dots and no reserved top header space.
NOTES_RENDER_WINDOW_DOTS="false"
# Split long note text into pages. 0 disables splitting.
NOTES_PAGE_MAX_CHARS="900"
# Add page marker at bottom of each rendered page (e.g. 1/3).
NOTES_PAGE_LABEL="true"
# Force same image size for all pages in one note.
NOTES_PAGE_UNIFORM_SIZE="true"
# Multi-page upload order: last page first, first page last.
NOTES_UPLOAD_LAST_PAGE_FIRST="true"
# Add "Page X/Y" line into Gyazo desc metadata.
NOTES_INCLUDE_PAGE_IN_DESC="true"
# Keep false to preserve feed order by upload sequence for multi-page notes.
NOTES_GYAZO_SEND_CREATED_AT="false"
NOTES_GYAZO_ACCESS_POLICY="only_me"
NOTES_GYAZO_DESC_TAG="#notes"
NOTES_GYAZO_CONTEXT_NOTE=""
# true = append app tag to final notes tag line (e.g. #notes #Safari).
NOTES_DESC_TAG_APP="true"
NOTES_DESC_TAG_WINDOW="false"
NOTES_DESC_TAG_URL="false"
NOTES_DESC_STYLE="compact"
NOTES_COPY_URL_TO_CLIPBOARD="true"
NOTES_PROCESS_AFTER_CAPTURE="false"
# Max seconds for AppleScript context capture before fallback to manual/empty context.
NOTES_OSASCRIPT_TIMEOUT_SEC="2"
